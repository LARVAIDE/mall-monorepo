{
  "name": "mall-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "mini mall project",
  "keywords": [
    "mall",
    "monorepo",
    "micro-frontend",
    "DDD"
  ],
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "cross-env NODE_ENV=development pnpm --filter '@mall/application-*' --filter '@mall/web' start",
    "build": "cross-env NODE_ENV=production pnpm --filter '@mall/application-*' --filter '@mall/web' build",
    "dev:shared": "cross-env NODE_ENV=development pnpm --filter '@mall/base' --filter '@mall/domain' start",
    "build:shared": "cross-env NODE_ENV=production pnpm --filter '@mall/base' --filter '@mall/domain' build",
    "clean": "pnpm --filter '@mall/*...' run clean",
    "prepare": "husky install",
    "version:rules": "pnpm changeset pre exit & pnpm changeset add",
    "version:update": "pnpm changeset pre exit & pnpm changeset version",
    "version:beta": "pnpm changeset pre exit & pnpm changeset pre enter beta",
    "version:alpha": "pnpm changeset pre exit & pnpm changeset pre enter alpha",
    "version:rc": "pnpm changeset pre exit & pnpm changeset pre enter rc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,json}": "prettier --write"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@faker-js/faker": "^8.2.0",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "esbuild-loader": "^4.0.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.2",
    "rimraf": "^5.0.5",
    "terser-webpack-plugin": "^5.3.9",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0",
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@rollup/plugin-alias": "^5.0.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "rollup": "^4.1.4",
    "rollup-plugin-copy": "^3.5.0"
  }
}
